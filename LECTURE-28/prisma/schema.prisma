generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Prisma supports flipping of database

model User {
  id      Int      @id @default(autoincrement())       //@Id primary key  jo ki khud increment hoyegii
  email   String   @unique
  name    String?    
  password String                   //Optional yeh null ho skta h kyunki ? lga hua h
}


